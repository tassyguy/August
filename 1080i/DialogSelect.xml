<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2000">
    <defaultcontrol always="true">3</defaultcontrol>

    <controls>

        <include>Global_Overlay</include>

        <control type="group">
            <include>Dialog_Standard_Group</include>

            <!-- Header -->
            <control type="label" id="1">
                <include>Dialog_Standard_Header</include>
                <label>13406</label>
            </control>

            <!-- Simple List -->
            <control type="list" id="3">
                <left>0</left>
                <width>1080</width>
                <top>120</top>
                <height>759</height>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <onup>3</onup>
                <ondown>3</ondown>
                <itemlayout height="69" width="1080">
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <font>SmallBold</font>
                        <textcolor>dialog_fg_70</textcolor>
                        <height>66</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <textcolor>dialog_fg_70</textcolor>
                        <align>right</align>
                        <height>66</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label2</info>
                    </control>
                </itemlayout>
                <focusedlayout height="69" width="1080">
                    <control type="image">
                        <left>0</left>
                        <right>0</right>
                        <height>66</height>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(3)">Conditional</animation>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <height>66</height>
                        <font>SmallBold</font>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <align>right</align>
                        <height>66</height>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </focusedlayout>
            </control>

            <!-- Detailed List -->
            <control type="panel" id="6">
                <include>Dialog_Standard_List_Left</include>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <onup>6</onup>
                <ondown>6</ondown>
                <itemlayout height="138" width="700">
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                    </control>
                    <control type="label">
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </itemlayout>
                <focusedlayout height="138" width="700">
                    <control type="image">
                        <width>100%</width>
                        <height>135</height>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </focusedlayout>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="8000">
                <include>Dialog_Standard_Right_Grouplist</include>
                <onleft condition="Control.IsVisible(3)">3</onleft>
                <onright condition="Control.IsVisible(3)">3</onright>
                <onleft condition="Control.IsVisible(6)">6</onleft>
                <onright condition="Control.IsVisible(6)">6</onright>
                <animation effect="slide" start="0" end="22,-100" condition="!Control.IsVisible(6)">Conditional</animation>
                <control type="button" id="5">
                    <label>368</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
                <control type="button" id="7">
                    <visible>!Control.IsVisible(3)</visible>
                    <label>222</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
            </control>

            <!-- Big Image -->
            <control type="group">
                <centerright>190</centerright>
                <top>357</top>
                <width>300</width>
                <height>450</height>
                <visible>Control.IsVisible(6)</visible>
                <control type="image">
                    <texture>$INFO[Container(6).ListItem.Icon]</texture>
                    <aspectratio align="center" aligny="bottom">keep</aspectratio>
                </control>
            </control>

            <!-- Separator -->
            <control type="image">
                <left>699</left>
                <top>120</top>
                <height>687</height>
                <width>1</width>
                <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                <visible>Control.IsVisible(6)</visible>
            </control>

        </control>
    </controls>
</window>
